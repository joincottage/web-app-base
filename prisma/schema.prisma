// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

datasource db {
  provider          = "mysql"
  url               = env("DATABASE_URL")
  shadowDatabaseUrl = env("SHADOW_DB_URL")
  planetScaleMode   = true
}

generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["planetScaleMode"]
}

model User {
  id                Int     @id @default(autoincrement())
  auth_id           String     @unique
  email             String  @unique
  name              String?
  img_url           String?
  bio               String?
  skills            String?
  type              String?
  hasJoinedDiscord  Boolean?
  currentTaskId     Int?
}

model Task {
  id               Int     @id @default(autoincrement())
  clientName       String?
  clientImgUrl     String?
  clientCategoryId String?
  name             String?
  shortDesc        String?
  longDesc         String? @db.VarChar(1000)
  skills           String?
  datePosted       String?
  status           String?
  price            Int?
  discordChannelId String?
}

model Client {
  id                Int     @id @default(autoincrement())
  name              String?
  logoUrl           String?
  userEmailOfOwner  String
  discordCategoryId String?
}
